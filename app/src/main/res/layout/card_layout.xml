<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/single_card"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:strokeWidth="1dp"
    app:strokeColor="@color/material_on_surface_stroke"
    android:theme="@style/Theme.MaterialComponents.Light">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">



        <ImageView
            android:id="@+id/product_imageview"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@color/purple_500"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic"

            android:contentDescription="@string/image_of_the_product"
            android:src="@drawable/ic_baseline_android_24"/>

        <TextView
            android:id="@+id/product_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:layout_margin="3dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            />

        <TextView
            android:id="@+id/product_price_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_price"
            android:layout_margin="3dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

        <TextView
            android:id="@+id/product_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_description"
            android:layout_margin="3dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
        <TextView
            android:id="@+id/product_position_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_position"
            android:layout_margin="3dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>